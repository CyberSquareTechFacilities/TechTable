<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Estilo para quando a caixa de texto está selecionada-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
            />
            <solid android:color="@color/white"/>
            <stroke android:color="@color/laranja" android:width="1dp"/>
        </shape>
    </item>

    <!--Estilo para quando a caixa de texto NÃO está selecionada-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
            />
            <solid android:color="@color/white"/>
            <stroke android:color="@color/cinza_medio" android:width="1dp"/>
        </shape>
    </item>
</selector>
